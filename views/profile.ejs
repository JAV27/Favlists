<!DOCTYPE html>
<html lang="en">
<%- include('head'); %>
<body>
    
    <%- include('navbar', {
        home: false,
        user: user
    }); %>


    <div class="profile">
        <div class="left">
            <img class="profile-image" src="<%= user.image %>" referrerpolicy="no-referrer">
            <p class="name"><%= user.username %></p>
            <a href="/auth/logout">Logout</a>
        </div>
        <div class="right">
            <div class="movies">
                <p>My Movies</p>
                <div class="list">
                    <% movies.forEach(movie => { %>
                        <div class="item">
                            <img src="http://image.tmdb.org/t/p/w92/<%= movie.poster %>">
                        </div>
                    <% }); %>
                </div>
                <div class="more">
                    <a href="/movies"><p>See full list ></p></a>
                </div>
            </div>
        </div>
    </div>
    <%- include('jquery');%>
</body>
</html>

